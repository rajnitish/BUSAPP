<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/quantum_white_100">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bus_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Bus Details"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/bus_no_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/bus_detail_toolbar"
        android:textSize="22sp"
        android:text="Bus Number:" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:id="@+id/bus_no_box"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/bus_detail_toolbar"
        android:background="@drawable/rounded_edittext"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/bus_driver_name_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_no_text"
        android:textSize="22sp"
        android:text="Bus Driver Name:" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:id="@+id/bus_driver_name_box"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_no_box"
        android:background="@drawable/rounded_edittext"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/bus_color_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_driver_name_text"
        android:textSize="22sp"
        android:text="Bus Color:" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:id="@+id/bus_color_box"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_driver_name_box"
        android:background="@drawable/rounded_edittext"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/bus_capacity_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_color_text"
        android:textSize="22sp"
        android:text="Bus Capacity:" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:id="@+id/bus_capacity_box"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/bus_color_box"
        android:background="@drawable/rounded_edittext"
        android:textSize="22sp" />
</RelativeLayout>

